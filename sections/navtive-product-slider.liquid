
{%- liquid
    if section.settings.collection.all_products_count > section.settings.products_to_show
      assign more_in_collection = true
    endif
  -%}
  <div class="collection {% unless section.settings.full_width %} page-width {% endunless %}">
    
    {% if section.settings.title != blank %}
      <h2 class="{{ section.settings.align_text }} mb-8 heading-underline" style="font-size: {{ section.settings.font_size }}px">{{ section.settings.title | escape }}</h2>
    {% endif %}
  
    <div class="featured-collection__products">
      {% if section.settings.slider %}
          <div class="relative overflow-x-hidden" 
            @keydown.right="next"
            @keydown.left="prev"
            tabindex="0"
            x-data="Slider"
            x-init="$nextTick(() => {
                slider = $refs.slider;
            })"
            role="region"
            aria-labelledby="product carousel"
            >
  
            <button @click="prev" class="text-3xl font-medium absolute top-1/2 transform -translate-y-1/2 left-0 bg-white p-1">
                <span aria-hidden="true">❮</span>
                <span class="sr-only">Previous slide</span>
            </button>
  
            <div class="flex w-full overflow-x-scroll scrollbar-design pb-8 snap-x snap-mandatory"
                x-ref="slider"
                role="list">
  
                {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
                  <div class="
                    {{ section.settings.items_per_row_mobile }} 
                    {{ section.settings.items_per_row_tablet }} 
                    {{ section.settings.items_per_row }} flex-shrink-0 px-1 md:px-3">
                    {% render 'card-product',
                        card_product: product,
                        show_secondary_image: section.settings.show_secondary_image,
                    %}
                  </div>
                {%- endfor -%}
            </div>
  
            <button @click="next" class="text-3xl font-medium absolute top-1/2 transform -translate-y-1/2 right-0 bg-white p-1">
                <span aria-hidden="true">❯</span>
                <span class="sr-only">Next slide</span>
            </button>
  
          </div>
      {% else %}
        <div class="grid 
          {{ section.settings.grid_desktop }}
          {{ section.settings.grid_tablet }}
          {{ section.settings.grid_mobile }}
           gap-2">
          {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
            <div class="">
                {% render 'card-product',
                    card_product: product,
                    show_secondary_image: section.settings.show_secondary_image,
                %}
            </div>
          {%- endfor -%}
        </div>
      {% endif %}
  
      {% if section.settings.button != blank %}
        <a href="{{ section.settings.button_link }}" class="button--secondary max-w-[200px] !font-semibold mx-auto mt-8">
          {{ section.settings.button }}
        </a>
      {% endif %}
  
    </div>
  
  </div>
  
